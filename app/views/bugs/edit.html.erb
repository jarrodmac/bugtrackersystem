<h1>Editing bug</h1>

<%= error_messages_for :bug %>

<% form_for(@bug) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Project</b><br />
    <%= f.text_field :project_id %>
  </p>

  <p>
    <b>Repository</b><br />
    <%= f.text_field :repository_id %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Details</b><br />
    <%= f.text_area :details %>
  </p>

  <p>
    <b>Next release</b><br />
    <%= f.check_box :next_release %>
  </p>

  <p>
    <b>Finished</b><br />
    <%= f.check_box :finished %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @bug %> |
<%= link_to 'Back', bugs_path %>
